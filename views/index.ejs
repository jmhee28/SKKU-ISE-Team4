    db.collection('accounts').add({
      name: ""
    })
    db.collection('accounts').where('name',"==",'').get().then(function(snapshot){
      snapshot.forEach(function(doc){
        doc.ref.delete();
      })
    });

    function go_to_sign_in() {
      console.log("go to sign in")
      location.href = "/calendar"
    }
    async function click_sign_in() {
      await db.collection('accounts').where('skkuid',"==",document.getElementById('floatingInput').value).where('skkupw','==',document.getElementById('floatingPassword').value).get().then((snapshot)=>{
        if(!snapshot.empty){
            const context = snapshot.docs[0].data();
            fetch("/calendar", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify(context),
            });
            go_to_sign_in();
        }
      })  
    }
    document.getElementById('submit').addEventListener('click',function(){
      click_sign_in();
    })
